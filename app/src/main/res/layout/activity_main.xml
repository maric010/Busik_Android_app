<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FF232323"
    android:orientation="vertical">

    <fragment
        android:id="@+id/nav_host_fragment"
        class="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="60dp"
        app:defaultNavHost="true"
        app:layout_constraintHorizontal_bias="0.0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_color"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
<LinearLayout
    android:onClick="fragment_orders_onClick"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:layout_marginLeft="20dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <View
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:background="@drawable/ellipse_2"
        />
    <TextView
        android:id="@+id/some_id"
        android:layout_width="36dp"
        android:layout_height="14dp"
        android:textColor="@color/white"
        android:text="@string/some_id"
        android:textAppearance="@style/some_id"
        android:gravity="top"
        />
</LinearLayout>
<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="40dp"
    android:onClick="fragment_message_onClick"
            android:orientation="vertical">
            <View
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:background="@drawable/ellipse_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textColor="@color/white"
                android:text="сообщения"
                android:textAppearance="@style/some_id"
                android:gravity="top"
                />
        </LinearLayout>
<LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="cabinet_onClick"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <View
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:background="@drawable/ellipse_3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textColor="@color/white"
                android:text="кабинет"
                android:textAppearance="@style/some_id"
                android:gravity="top"
                />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>